<?xml version="1.0" encoding="utf-8"?>
<!--
  Widget レイアウト（UI-REQ-001/003）
  Premium デザイン: グラスモーフィズム風、カード型セクション、リッチタイポグラフィ
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background_premium"
    android:orientation="vertical"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:paddingTop="10dp"
    android:paddingBottom="8dp">

    <!-- ═══════════════════════════════════════════════════════ -->
    <!-- ヘッダー: 駅名 + 路線名 + 更新時刻 + 更新ボタン       -->
    <!-- ═══════════════════════════════════════════════════════ -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp">

        <TextView
            android:id="@+id/text_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="野洲"
            android:textColor="#FFFFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:letterSpacing="0.05" />

        <TextView
            android:id="@+id/text_line_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/text_header_title"
            android:layout_marginStart="8dp"
            android:layout_centerVertical="true"
            android:text="琵琶湖線"
            android:textColor="#99FFFFFF"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/text_last_updated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/btn_refresh"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:text="更新 07:01"
            android:textColor="#66FFFFFF"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/btn_refresh"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:contentDescription="更新"
            android:src="@drawable/ic_refresh_white"
            android:background="@drawable/refresh_button_bg"
            android:padding="6dp" />
    </RelativeLayout>

    <!-- ヘッダー区切り線（グラデーション） -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/header_divider_premium"
        android:layout_marginBottom="6dp" />

    <!-- ステータスメッセージ -->
    <TextView
        android:id="@+id/text_status_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFAB40"
        android:textSize="11sp"
        android:visibility="gone"
        android:layout_marginBottom="4dp" />

    <!-- ═══════════════════════════════════════════════════════ -->
    <!-- 電車セクション（カード型）                               -->
    <!-- ═══════════════════════════════════════════════════════ -->
    <LinearLayout
        android:id="@+id/section_train"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/section_train_bg"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp">

        <!-- 電車セクションヘッダー（アイコン付き） -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_train"
                android:contentDescription="電車"
                android:layout_marginEnd="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="電車"
                android:textColor="#FF90CAF9"
                android:textSize="11sp"
                android:textStyle="bold"
                android:letterSpacing="0.1" />
        </LinearLayout>

        <!-- 2カラム: 上り / 下り -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <!-- 左カラム: ↑ 上り（米原方面） -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="↑ 上り"
                    android:textColor="#FF82B1FF"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="3dp" />

                <!-- 上り 1本目 -->
                <LinearLayout
                    android:id="@+id/row_train_up1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/train_row_bg"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="2dp">

                    <TextView
                        android:id="@+id/train_up1_type"
                        android:layout_width="38dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/badge_local_premium"
                        android:textColor="#FFFFFFFF"
                        android:textSize="9sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/train_up1_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/train_up1_dest"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="#BBFFFFFF"
                        android:textSize="12sp"
                        android:singleLine="true"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/train_up1_minutes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/minutes_highlight_bg"
                        android:textColor="#FFFFAB40"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:layout_marginStart="2dp" />
                </LinearLayout>

                <!-- 上り 2本目 -->
                <LinearLayout
                    android:id="@+id/row_train_up2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/train_row_bg"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="2dp">

                    <TextView
                        android:id="@+id/train_up2_type"
                        android:layout_width="38dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/badge_local_premium"
                        android:textColor="#FFFFFFFF"
                        android:textSize="9sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/train_up2_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/train_up2_dest"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="#BBFFFFFF"
                        android:textSize="12sp"
                        android:singleLine="true"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/train_up2_minutes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/minutes_highlight_bg"
                        android:textColor="#FFFFAB40"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:layout_marginStart="2dp" />
                </LinearLayout>

                <!-- 上り 3本目 -->
                <LinearLayout
                    android:id="@+id/row_train_up3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/train_row_bg"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/train_up3_type"
                        android:layout_width="38dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/badge_local_premium"
                        android:textColor="#FFFFFFFF"
                        android:textSize="9sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/train_up3_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/train_up3_dest"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="#BBFFFFFF"
                        android:textSize="12sp"
                        android:singleLine="true"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/train_up3_minutes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/minutes_highlight_bg"
                        android:textColor="#FFFFAB40"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:layout_marginStart="2dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- 中央の区切り線（グラデーション縦線） -->
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@drawable/column_divider_premium"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp" />

            <!-- 右カラム: ↓ 下り（京都方面） -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="↓ 下り"
                    android:textColor="#FFFFAB91"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="3dp" />

                <!-- 下り 1本目 -->
                <LinearLayout
                    android:id="@+id/row_train_down1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/train_row_bg"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="2dp">

                    <TextView
                        android:id="@+id/train_down1_type"
                        android:layout_width="38dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/badge_rapid_premium"
                        android:textColor="#FFFFFFFF"
                        android:textSize="9sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/train_down1_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/train_down1_dest"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="#BBFFFFFF"
                        android:textSize="12sp"
                        android:singleLine="true"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/train_down1_minutes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/minutes_highlight_bg"
                        android:textColor="#FFFFAB40"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:layout_marginStart="2dp" />
                </LinearLayout>

                <!-- 下り 2本目 -->
                <LinearLayout
                    android:id="@+id/row_train_down2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/train_row_bg"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="2dp">

                    <TextView
                        android:id="@+id/train_down2_type"
                        android:layout_width="38dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/badge_special_rapid_premium"
                        android:textColor="#FFFFFFFF"
                        android:textSize="9sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/train_down2_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/train_down2_dest"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="#BBFFFFFF"
                        android:textSize="12sp"
                        android:singleLine="true"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/train_down2_minutes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/minutes_highlight_bg"
                        android:textColor="#FFFFAB40"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:layout_marginStart="2dp" />
                </LinearLayout>

                <!-- 下り 3本目 -->
                <LinearLayout
                    android:id="@+id/row_train_down3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/train_row_bg"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/train_down3_type"
                        android:layout_width="38dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/badge_local_premium"
                        android:textColor="#FFFFFFFF"
                        android:textSize="9sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/train_down3_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/train_down3_dest"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="#BBFFFFFF"
                        android:textSize="12sp"
                        android:singleLine="true"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/train_down3_minutes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/minutes_highlight_bg"
                        android:textColor="#FFFFAB40"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:layout_marginStart="2dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- 電車⇔バス セクション区切り線（グラデーション） -->
    <View
        android:id="@+id/section_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/section_divider_premium"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp" />

    <!-- ═══════════════════════════════════════════════════════ -->
    <!-- バスセクション（カード型）                               -->
    <!-- ═══════════════════════════════════════════════════════ -->
    <LinearLayout
        android:id="@+id/section_bus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/section_bus_bg"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp">

        <!-- バスセクションヘッダー（アイコン付き） -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="2dp">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_bus"
                android:contentDescription="バス"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/text_bus_stop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="野洲駅"
                android:textColor="#FFA5D6A7"
                android:textSize="11sp"
                android:textStyle="bold"
                android:letterSpacing="0.1" />

            <TextView
                android:id="@+id/text_bus_line_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="近江鉄道バス"
                android:textColor="#77FFFFFF"
                android:textSize="10sp" />
        </LinearLayout>

        <!-- バスヘッダー区切り線 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/header_divider_premium"
            android:layout_marginBottom="4dp" />

        <!-- 2カラム: 野洲駅系 / 北口系 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- 左カラム: 野洲駅発/行 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="4dp">

                <TextView
                    android:id="@+id/text_bus_yasu_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="野洲駅発"
                    android:textColor="#FF81C784"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="3dp" />

                <!-- 野洲駅系 1本目 -->
                <LinearLayout
                    android:id="@+id/row_bus_yasu1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/train_row_bg"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="2dp">

                    <TextView
                        android:id="@+id/bus_yasu1_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:singleLine="true" />

                    <TextView
                        android:id="@+id/bus_yasu1_via"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        android:textColor="#BBFFFFFF"
                        android:textSize="12sp"
                        android:singleLine="true"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/bus_yasu1_minutes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/minutes_highlight_bg"
                        android:textColor="#FFFFAB40"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:layout_marginStart="2dp" />
                </LinearLayout>

                <!-- 野洲駅系 2本目 -->
                <LinearLayout
                    android:id="@+id/row_bus_yasu2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/train_row_bg"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="2dp">

                    <TextView
                        android:id="@+id/bus_yasu2_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:singleLine="true" />

                    <TextView
                        android:id="@+id/bus_yasu2_via"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        android:textColor="#BBFFFFFF"
                        android:textSize="12sp"
                        android:singleLine="true"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/bus_yasu2_minutes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/minutes_highlight_bg"
                        android:textColor="#FFFFAB40"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:layout_marginStart="2dp" />
                </LinearLayout>

                <!-- 野洲駅系 3本目 -->
                <LinearLayout
                    android:id="@+id/row_bus_yasu3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/train_row_bg"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/bus_yasu3_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:singleLine="true" />

                    <TextView
                        android:id="@+id/bus_yasu3_via"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        android:textColor="#BBFFFFFF"
                        android:textSize="12sp"
                        android:singleLine="true"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/bus_yasu3_minutes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/minutes_highlight_bg"
                        android:textColor="#FFFFAB40"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:layout_marginStart="2dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- 区切り線（グラデーション縦線） -->
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@drawable/column_divider_premium"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp" />

            <!-- 右カラム: 北口発/行 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="4dp">

                <TextView
                    android:id="@+id/text_bus_kita_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="北口発"
                    android:textColor="#FF81C784"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="3dp" />

                <!-- 北口系 1本目 -->
                <LinearLayout
                    android:id="@+id/row_bus_kita1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/train_row_bg"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="2dp">

                    <TextView
                        android:id="@+id/bus_kita1_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:singleLine="true" />

                    <TextView
                        android:id="@+id/bus_kita1_via"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        android:textColor="#BBFFFFFF"
                        android:textSize="12sp"
                        android:singleLine="true"
                        android:ellipsize="end" />

